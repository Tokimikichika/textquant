{
    "name": "tokimikichika/find",
    "description": "Text analysis library for counting words, characters, sentences and paragraph",
    "type": "library",
    "license": "MIT",
    "keywords": ["text", "analysis", "words", "statistics", "nlp"],
    "authors": [
        {
            "name": "Tokimikichika",
            "email": "ahileses@mail.ru"
        }
    ],
    "require": {
        "php": ">=8.0",
        "slim/slim": "4.12",
        "slim/psr7": "1.6",
        "tokimikichika/htmlsanitizer": "^0.1.0"
    },
    "autoload": {
        "psr-4": {
            "Tokimikichika\\Find\\": "src/"
        }
    },
    "bin": ["bin/analyze.php"],
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
    "phpunit/phpunit": "^10.0",
    "squizlabs/php_codesniffer": "^3.10"
    },
    "scripts": {
        "test": "php tests/TextAnalyzerTest.php",
        "test-unit": "./vendor/bin/phpunit",
        "test-coverage": "./vendor/bin/phpunit --coverage-html coverage",
        "analyze": "php bin/analyze.php",
        "cs-fix": "php-cs-fixer fix",
        "cs-check": "php-cs-fixer fix --dry-run --diff",
    "phpstan": "php tools/phpstan.phar analyse -c phpstan.neon",
    "phpcs": "./vendor/bin/phpcs -q",
    "phpcbf": "./vendor/bin/phpcbf -q"
    },
    "config": {
        "preferred-install": "source"
    }
}
