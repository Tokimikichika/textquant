{
    "name": "tokimikichika/find",
    "description": "Text analysis library for counting words, characters, sentences and paragraph",
    "type": "library",
    "license": "MIT",
    "keywords": ["text", "analysis", "words", "statistics", "nlp"],
    "authors": [
        {
            "name": "Tokimikichika",
            "email": "ahileses@mail.ru"
        }
    ],
    "require": {
        "php": ">=8.0"
    },
    "autoload": {
        "psr-4": {
            "Tokimikichika\\Find\\": "src/"
        }
    },
    "bin": ["bin/analyze.php"],
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "phpunit/phpunit": "*"
    },
    "scripts": {
        "analyze": "php bin/analyze.php",
        "test": "php tests/TextAnalyzerTest.php",
        "cs-fix": "php-cs-fixer fix",
        "cs-check": "php-cs-fixer fix --dry-run --diff"
    }
}
